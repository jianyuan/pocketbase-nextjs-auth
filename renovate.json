{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "ignoreTests": true,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["@types/", "eslint"],
      "automerge": true
    }
  ]
}
